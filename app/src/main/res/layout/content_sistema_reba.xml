<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_sistema_reba"
    tools:context="dei.estg.ipleiria.pt.ergodigital.SistemaRebaActivity"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="680dp"
                android:layout_weight="0.59"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/ivRebaTronco"
                        android:src="@drawable/ic_no_image_squad"
                        android:layout_weight="0.14" />

                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/ivRebaPescoco"
                        android:src="@drawable/ic_no_image_squad"
                        android:layout_weight="0.14" />

                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/ivRebaPernas"
                        android:src="@drawable/ic_no_image_squad"
                        android:layout_weight="0.14" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="654dp"
                        android:orientation="vertical"
                        android:measureWithLargestChild="false"
                        android:longClickable="false"
                        android:weightSum="1"
                        android:gravity="top|center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Tronco"
                            android:id="@+id/tvRebaTronco" />

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/cbRebaTronco"
                            android:longClickable="false"
                            android:spinnerMode="dialog"
                            android:entries="@array/RebaTronco"
                            android:layout_weight="0.04"
                            android:nestedScrollingEnabled="false" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Se o ombro estiver apoiado"
                            android:id="@+id/chbRebaCorrecaoTronco"
                            android:layout_gravity="left" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Pescoço"
                            android:id="@+id/tvRebaPescoco"
                            android:gravity="bottom"
                            android:layout_weight="0.10" />

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/cbRULAantebraco"
                            android:entries="@array/RebaPescoco"
                            android:layout_weight="0.04"
                            android:spinnerMode="dropdown" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Se houver rotação ou flexão lateral do pescoço"
                            android:id="@+id/chkBoxRebaPescoco"
                            android:layout_gravity="left" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Pernas"
                            android:id="@+id/tvRebaPernas"
                            android:layout_weight="0.14"
                            android:gravity="bottom" />

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/cbRebaPernas"
                            android:layout_weight="0.04"
                            android:entries="@array/RebaPernas"
                            android:spinnerMode="dropdown"
                            android:focusable="false" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Se flexão dos joelhos entre 30º e 60º"
                            android:id="@+id/chkBoxRebaPernas1"
                            android:layout_gravity="left" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Se a flexão dos joelhos >60º"
                            android:id="@+id/chkBoxRebaPernas2"
                            android:layout_weight="0.25"
                            android:layout_gravity="left|top" />

                        <Button
                            android:layout_width="137dp"
                            android:layout_height="wrap_content"
                            android:text="Seguinte"
                            android:id="@+id/btnRebaSeguinte"
                            android:onClick="clickRebaSeguinte" />

                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>







</LinearLayout>