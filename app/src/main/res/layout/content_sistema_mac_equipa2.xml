<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_sistema_mac_equipa2"
    tools:context="dei.estg.ipleiria.pt.ergodigital.SistemaMacEquipa2Activity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:id="@+id/linearLayout3" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/GamElevacaoVerticalTitulo"
                android:id="@+id/txtViewGamEquipaVerticalTitle" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:layout_marginTop="5dp" >

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:id="@+id/rgGamEquipaVertical" >

                    <RadioButton
                        android:drawableLeft="@drawable/ic_no_image_rec"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/rbGamEquipaVertical1"
                        android:checked="false"
                        android:text="@string/GamElevacaoVertical1" />

                    <RadioButton
                        android:drawableLeft="@drawable/ic_no_image_rec"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/GamElevacaoVertical2"
                        android:id="@+id/rbGamEquipaVertical2" />

                    <RadioButton
                        android:drawableLeft="@drawable/ic_no_image_rec"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/GamElevacaoVertical3"
                        android:id="@+id/rbGamEquipaVertical3" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/layoutGamEquipaTorcaoTronco" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/GamElevacaoTorcaoTroncoTitulo"
                android:id="@+id/txViewGamEquipaTorcaoTroncoTitulo" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:id="@+id/rgGamEquipaTorcaoTronco" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GamElevacaoTorcaoTronco1"
                    android:id="@+id/rbGamEquipaTorcaoTronco1"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GamElevacaoTorcaoTronco2"
                    android:id="@+id/rbGamEquipaTorcaoTronco2" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GamElevacaoTorcaoTronco3"
                    android:id="@+id/rbGamEquipaTorcaoTronco3" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="80dp"
            android:id="@+id/linearGamEquipaConstrangimento" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/GamElevacaoConstrangimentTitulo"
                android:id="@+id/txtViewGamEquipaConstrangimentoTitulo"
                android:layout_marginTop="10dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:id="@+id/rgGamEquipaConstrangimentoPosicao" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GamElevacaoConstrangimentoPosicao1"
                    android:id="@+id/rbGamEquipaConstrangimentoPosicao1"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GamElevacaoConstrangimentoPosicao2"
                    android:id="@+id/rbGamEquipaConstrangimentoPosicao2" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GamElevacaoConstrangimentoPosicao3"
                    android:id="@+id/rbGamEquipaConstrangimentoPosicao3" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
